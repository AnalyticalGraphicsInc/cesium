{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "Source"
        ],
        "exclude": [
            "Source/ThirdParty",
            "Source/Workers"
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "./Tools/jsdoc/cesiumTags"
    ],
    "templates": {
        "cleverLinks": true,
        "default": {
            "outputSourceFiles": false
        },
        "sourceUrl": "https://github.com/CesiumGS/cesium/blob/{version}/Source/{filename}"
    },
    "opts": {
        "destination": "Source",
        "template": "tsd-jsdoc/dist",
        "outFile": "Cesium.d.ts",
        "recurse": true
    }
}
